@inherits BaseAsset<Core.Assets.Sound>
    
@if(this.Source is not null){
    <audio id="@this.Source.Name" 
        preload="auto" src="@this.Source.Url" type="@this.Source.Type" >
    </audio>    
}

@code{
    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if(firstRender)
            await this.OnLoaded.InvokeAsync(this);
    }
}